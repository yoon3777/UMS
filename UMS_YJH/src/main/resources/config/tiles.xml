<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC
  "-//Apache Software Foundation//DTD Tiles Configuration 2.1//EN"
  "http://tiles.apache.org/dtds/tiles-config_2_1.dtd">

<tiles-definitions>

	<!-- 메뉴 표시 -->
	<definition name="base" template="/ums/jsp/tiles/template.jsp">
		<put-attribute name="css" value="/ums/jsp/tiles/css.jsp" />
		<put-attribute name="js" value="/ums/jsp/tiles/js.jsp" />
		<put-attribute name="left" value="/ums/jsp/tiles/left.jsp" />
		<put-attribute name="header" value="/ums/jsp/tiles/header.jsp" />
		<put-attribute name="body" value="" />
		<put-attribute name="footer" value="/ums/jsp/tiles/footer.jsp" />
	</definition>

	<definition name="*.page" extends="base">
		<put-attribute name="body" value="/ums/jsp/{1}.jsp" />
	</definition>

	<definition name="*/*.page" extends="base">
		<put-attribute name="body" value="/ums/jsp/{1}/{2}.jsp" />
	</definition>

	<definition name="*/*/*.page" extends="base">
		<put-attribute name="body" value="/ums/jsp/{1}/{2}/{3}.jsp" />
	</definition>


